<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMVVM.View.Detalle">

    <StackLayout BackgroundColor="White">

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Registros de Empleados" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="{Binding Nombre}" TextColor="Black"></Label>
        <Label Text="{Binding Apellido}" TextColor="Black"></Label>
        <Label Text="{Binding Edad}" TextColor="Black"></Label>
        <Label Text="{Binding Direccion}" TextColor="Black"></Label>
        <Label Text="{Binding Puesto}" TextColor="Black"></Label>
        <Label Text="=================================================" TextColor="Black"></Label>
    </StackLayout>

</ContentPage>